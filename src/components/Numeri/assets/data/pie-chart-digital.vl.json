{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 120,
  "height": 116,
  "data": {
    "url": "https://gist.githubusercontent.com/StefanoFrontini/79ed190a28fe85d75e694feda550f9c5/raw/17a5db29b2a19a22c8ee44b25bd8540cff930d06/dashboard-send-sezione1.json",
    "format": { "property": "totale_notifiche" }
  },
  "params": [{ "name": "year", "value": null }],
  "transform": [
    { "filter": "year == datum.year || year === +datum.year" },
    {
      "calculate": "datum.type_notification == 'ANALOG' ? 'Analogica' : 'Digitale'",
      "as": "type"
    },
    {
      "joinaggregate": [{ "op": "sum", "field": "num_iun", "as": "total" }]
    },
    {
      "calculate": "datum.num_iun / datum.total",
      "as": "percentage"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "arc",
        "innerRadius": 65,
        "outerRadius": 110,
        "padAngle": 0.04,
        "cornerRadius": 5
      }
    },
    {
      "mark": {
        "type": "text",
        "radius": 123,
        "fill": "#0B3EE3",
        "fontWeight": "bold",
        "fontSize": 14
      },
      "encoding": {
        "text": { "field": "percentage", "type": "nominal", "format": ".0%" }
      }
    }
  ],
  "encoding": {
    "theta": { "field": "num_iun", "type": "quantitative", "stack": true },
    "color": {
      "field": "type",
      "type": "nominal",
      "legend": null,
      "scale": {
        "domain": ["Analogica", "Digitale"],
        "range": ["url(#pattern_1)", "url(#pattern_2)"]
      }
    },
    "tooltip": [
      { "field": "type", "type": "nominal", "title": "Tipo di notifica" },
      {
        "field": "num_iun",
        "type": "quantitative",
        "title": "Numero di notifiche",
        "format": ","
      }
    ]
  },
  "view": { "stroke": null }
}
