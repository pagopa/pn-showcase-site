{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 120,
  "height": 116,
  "data": {
    "url": "https://gist.githubusercontent.com/StefanoFrontini/79ed190a28fe85d75e694feda550f9c5/raw/43ea3abaa2c5ec920f6222e29f797f23a3abd011/dashboard-send-sezione1.json",
    "format": { "property": "totale_notifiche" }
  },
  "params": [{ "name": "year", "value": null }],
  "transform": [
    { "filter": "year == datum.year || year === +datum.year" },
    {
      "calculate": "datum.type_notification == 'ANALOG' ? 'Analogica' : 'Digitale'",
      "as": "type"
    }
  ],
  "mark": {
    "type": "arc",
    "innerRadius": 65,
    "outerRadius": 110,
    "padAngle": 0.04,
    "cornerRadius": 5
  },
  "encoding": {
    "theta": { "field": "num_iun", "type": "quantitative" },
    "color": {
      "field": "type",
      "type": "nominal",
      "legend": null,
      "scale": {
        "domain": ["Analogica", "Digitale"],
        "range": ["url(#pattern_1)", "url(#pattern_2)"]
      }
    },
    "tooltip": [
      { "field": "type", "type": "nominal", "title": "Tipo di notifica" },
      {
        "field": "num_iun",
        "type": "quantitative",
        "title": "Numero di notifiche",
        "format": ","
      }
    ]
  },
  "view": { "stroke": null }
}
