{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://gist.githubusercontent.com/StefanoFrontini/79ed190a28fe85d75e694feda550f9c5/raw/17a5db29b2a19a22c8ee44b25bd8540cff930d06/dashboard-send-sezione1.json",
    "format": { "property": "totale_notifiche" }
  },
  "params": [{ "name": "year", "value": null }],
  "transform": [
    { "filter": "year == datum.year || year === +datum.year" },
    { "filter": "datum.type_notification == 'DIGITAL'" }
  ],
  "mark": "text",
  "encoding": {
    "text": { "field": "num_iun", "aggregate": "sum", "format": ",d" }
  }
}
