  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/openpolis/geojson-italy/refs/heads/master/topojson/limits_IT_regions.topo.json",
        "format": { "type": "topojson", "feature": "regions" }
      },
      "projection": { "type": "mercator" },
      "mark": { "type": "geoshape", "fill": "#E6E6E6", "stroke": "#6D8BEE" }
    },
    {
      "data": {
        "url": "https://gist.githubusercontent.com/StefanoFrontini/a71f6def4ea6f834bb1ae53984c816b9/raw/5336a0d1a4d7de5d16370c42db1c25c9e1be914b/dashboard-send-sezione2.json",
        "format": { "property": "geo_comuni" }
      },
      "transform": [
        {
          "lookup": "regione",
          "from": {
            "data": { "name": "regions_coordinates" },
            "key": "regione",
            "fields": ["longitude", "latitude"]
          }
        }
      ],
      "projection": { "type": "mercator" },
      "mark": "circle",
      "encoding": {
        "longitude": { "field": "longitude", "type": "quantitative" },
        "latitude": { "field": "latitude", "type": "quantitative" },
        "size": {
          "field": "num_comuni_attivi",
          "type": "quantitative",
          "scale": { "range": [0, 2000] },
          "legend": null
        },
        "opacity": { "value": 1 },
        "color": { "value": "#0B3EE3" },
        "tooltip": [
          { "field": "regione", "type": "nominal", "title": "Regione" },
          {
            "field": "num_comuni_attivi",
            "format": ",",
            "type": "quantitative",
            "title": "Comuni"
          },
          {
            "field": "perc_comuni_attivi",
            "format": ".0%",
            "type": "quantitative",
            "title": "Percentuale comuni rispetto al totale dei comuni per regione"
          }
        ]
      }
    }
  ]
}
