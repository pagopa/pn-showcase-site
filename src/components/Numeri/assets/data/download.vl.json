{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": "container",
  "padding": 5,
  "data": {
    "url": "https://pdnd-prod-dl-1-public-data.s3.eu-central-1.amazonaws.com/dashboard/send/dashboard-send-sezione1.json",
    "format": { "property": "notifiche_per_mese" }
  },
  "params": [
    { "name": "is_cumulative", "value": true },
    { "name": "notification_type", "value": "analog" },
    {
      "name": "year",
      "value": null
    }
  ],
  "transform": [
    {
      "filter": "year(datum.month) === year || year === null"
    },
    {
      "calculate": "datum['num_iun_' + notification_type]",
      "as": "notification_value"
    },
    {
      "window": [
        {
          "op": "sum",
          "field": "notification_value",
          "as": "cumulative"
        }
      ],
      "sort": [{ "field": "month" }]
    },
    {
      "calculate": "is_cumulative ? datum.cumulative : datum.notification_value",
      "as": "metric_value"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "bar",
        "width": { "band": 0.7 },
        "cornerRadius": 5,
        "fill": "#0B3EE3"
      },
      "transform": [{ "filter": "!is_cumulative" }],
      "encoding": {
        "y": {
          "field": "metric_value",
          "type": "quantitative",
          "axis": { "format": "~s" }
        },
        "x": {
          "field": "month",
          "type": "ordinal",
          "timeUnit": "yearmonth",
          "axis": { "format": "%b %Y" }
        },
        "tooltip": [
          {
            "field": "month",
            "type": "temporal",
            "title": "Mese",
            "format": "%m/%Y"
          },
          {
            "field": "cumulative",
            "title": "Notifiche cumulate",
            "format": ","
          },
          {
            "field": "metric_value",
            "title": "Notifiche mensili",
            "format": ","
          }
        ]
      }
    },
    {
      "mark": {
        "type": "rect",
        "width": { "band": 0.7 },
        "color": "transparent",
        "tooltip": true
      },
      "encoding": {
        "x": {
          "field": "month",
          "type": "ordinal",
          "timeUnit": "yearmonth"
        },
        "y": {
          "field": "metric_value",
          "type": "quantitative"
        },
        "y2": {
          "value": 0
        },
        "tooltip": [
          {
            "field": "month",
            "type": "temporal",
            "title": "Mese",
            "format": "%m/%Y"
          },
          {
            "field": "cumulative",
            "title": "Notifiche cumulate",
            "format": ","
          },
          {
            "field": "notification_value",
            "title": "Notifiche mensili",
            "format": ","
          }
        ]
      }
    },

    {
      "mark": {
        "type": "area",
        "line": {
          "color": "#0B3EE3"
        },
        "color": {
          "x1": 1,
          "y1": 1,
          "x2": 1,
          "y2": 0,
          "stops": [
            {
              "offset": 0,
              "color": "white"
            },
            {
              "offset": 1,
              "color": "#0B3EE3"
            }
          ],
          "gradient": "linear"
        }
      },
      "transform": [{ "filter": "is_cumulative" }],
      "encoding": {
        "y": {
          "field": "metric_value",
          "type": "quantitative",
          "axis": {
            "format": "~s",
            "labelFontWeight": 600,
            "labelFont": "Titillium Web, sans-serif",
            "domain": false
          }
        },
        "x": {
          "field": "month",
          "type": "temporal",
          "timeUnit": "yearmonthdate",
          "axis": {
            "labelExpr": "year === null ? timeFormat(datum.value, '%b %Y') : timeFormat(datum.value, '%b')",
            "gridDash": [4, 4],
            "labelFontWeight": 600,
            "labelFont": "Titillium Web, sans-serif",
            "labelOverlap": "parity",
            "tickDash": [4, 4]
          }
        },
        "tooltip": [
          {
            "field": "month",
            "type": "temporal",
            "title": "Mese",
            "format": "%m/%Y"
          },
          {
            "field": "cumulative",
            "title": "Notifiche cumulate",
            "format": ","
          },
          {
            "field": "notification_value",
            "title": "Notifiche mensili",
            "format": ","
          }
        ]
      }
    }
  ]
}
