{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": "container",
  "padding": 5,
  "data": {
    "url": "https://pdnd-prod-dl-1-public-data.s3.eu-central-1.amazonaws.com/dashboard/send/dashboard-send-sezione2.json",
    "format": { "property": "geo_comuni" }
  },

  "transform": [
    {
      "lookup": "regione",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/openpolis/geojson-italy/refs/heads/master/topojson/limits_IT_regions.topo.json",
          "format": { "type": "topojson", "feature": "regions" }
        },
        "key": "properties.reg_name",
        "fields": ["type", "properties", "geometry"]
      }
    }
  ],
  "projection": { "type": "mercator" },
  "mark": { "type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5 },
  "encoding": {
    "color": {
      "field": "perc_comuni_attivi",
      "type": "quantitative",
      "scale": {
        "range": ["#b6c5f7", "#0B3EE3"]
      },
      "legend": null
    },
    "tooltip": [
      { "field": "regione", "type": "nominal", "title": "Regione" },
      {
        "field": "num_comuni_attivi",
        "format": ",",
        "type": "quantitative",
        "title": "Comuni"
      },
      {
        "field": "perc_comuni_attivi",
        "format": ".0%",
        "type": "quantitative",
        "title": "Percentuale comuni rispetto al totale dei comuni per regione"
      }
    ]
  }
}
